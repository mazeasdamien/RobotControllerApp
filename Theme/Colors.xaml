<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ORANGE COLOR PALETTE -->
    <Color x:Key="Color.Orange.500">#FFFF7900</Color> <!-- Standard Orange Brand -->
    <Color x:Key="Color.Orange.600">#FFE66000</Color> <!-- Darker Orange -->
    
    <Color x:Key="Color.Neutral.900">#FF0A0A0A</Color> <!-- Deep Black -->
    <Color x:Key="Color.Neutral.800">#FF1F1F1F</Color> <!-- Industrial Dark Grey -->
    <Color x:Key="Color.Neutral.100">#FFFFFFFF</Color> <!-- Primary Text -->
    <Color x:Key="Color.Neutral.400">#FF999999</Color> <!-- Muted Text -->
    
    <Color x:Key="Color.Status.Success">#FF00CC6A</Color>
    <Color x:Key="Color.Status.Warning">#FFFFCC00</Color>
    <Color x:Key="Color.Status.Error">#FFCC3300</Color>

    <!-- BRUSH TOKENS -->
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Orange.500}" />
    <SolidColorBrush x:Key="Brush.Primary.Hover" Color="{StaticResource Color.Orange.600}" />
    
    <SolidColorBrush x:Key="Brush.Background.Page" Color="{StaticResource Color.Neutral.900}" />
    <SolidColorBrush x:Key="Brush.Background.Card" Color="{StaticResource Color.Neutral.800}" />
    
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Neutral.100}" />
    <SolidColorBrush x:Key="Brush.Text.Muted" Color="{StaticResource Color.Neutral.400}" />
    
    <SolidColorBrush x:Key="Brush.Status.Success" Color="{StaticResource Color.Status.Success}" />
    <SolidColorBrush x:Key="Brush.Status.Warning" Color="{StaticResource Color.Status.Warning}" />

    <!-- NAVIGATION VIEW OVERRIDES (Fix Blue Highlight) -->
    <Color x:Key="SystemAccentColor">#FFFF7900</Color>
    <Color x:Key="SystemAccentColorLight1">#FFE66000</Color>
    <Color x:Key="SystemAccentColorLight2">#FFE66000</Color>
    <Color x:Key="SystemAccentColorDark1">#FFE66000</Color>
    <Color x:Key="SystemAccentColorDark2">#FFE66000</Color>

    <SolidColorBrush x:Key="NavigationViewSelectionIndicatorForeground" Color="{StaticResource Color.Orange.500}" />
    <SolidColorBrush x:Key="NavigationViewSelectionIndicatorForegroundPointerOver" Color="{StaticResource Color.Orange.600}" />
    <SolidColorBrush x:Key="NavigationViewSelectionIndicatorForegroundPressed" Color="{StaticResource Color.Orange.600}" />
    
    <SolidColorBrush x:Key="NavigationViewItemBackgroundSelected" Color="#33FF7900" /> <!-- Semi-transparent Orange -->
    <SolidColorBrush x:Key="NavigationViewItemBackgroundSelectedPointerOver" Color="#44FF7900" />

    <!-- Button Foreground Overrides for Dark Theme Reliability -->
    <SolidColorBrush x:Key="NavigationViewButtonForeground" Color="{StaticResource Color.Neutral.100}" />
    <SolidColorBrush x:Key="NavigationViewButtonForegroundPointerOver" Color="{StaticResource Color.Neutral.100}" />
    <SolidColorBrush x:Key="NavigationViewButtonForegroundPressed" Color="{StaticResource Color.Neutral.100}" />
    <SolidColorBrush x:Key="NavigationViewItemForeground" Color="{StaticResource Color.Neutral.100}" />
    <SolidColorBrush x:Key="NavigationViewItemForegroundPointerOver" Color="{StaticResource Color.Neutral.100}" />
</ResourceDictionary>
