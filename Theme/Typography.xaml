<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- FONT FAMILY -->
    <FontFamily x:Key="Font.Family.Brand">Segoe UI</FontFamily> <!-- Fallback to standard for robustness -->

    <!-- HEADLINE 1 (Display) -->
    <Style x:Key="Text.Headline1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Brand}"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="LineHeight" Value="40"/>
    </Style>

    <!-- HEADLINE 3 (Card Titles) -->
    <Style x:Key="Text.Headline3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Brand}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
    </Style>

    <!-- BODY 1 (Default Text) -->
    <Style x:Key="Text.Body1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Brand}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <!-- CAPTION (Muted Text) -->
    <Style x:Key="Text.Caption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Brand}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Muted}"/>
    </Style>

</ResourceDictionary>
