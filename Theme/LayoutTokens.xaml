<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- SPACING -->
    <x:Double x:Key="Space.4">4</x:Double>
    <x:Double x:Key="Space.8">8</x:Double>
    <x:Double x:Key="Space.16">16</x:Double>
    <x:Double x:Key="Space.24">24</x:Double>
    <x:Double x:Key="Space.32">32</x:Double>

    <!-- BORDER RADIUS -->
    <CornerRadius x:Key="Radius.Small">2</CornerRadius>
    <CornerRadius x:Key="Radius.Medium">4</CornerRadius>
    <CornerRadius x:Key="Radius.Large">8</CornerRadius>

    <!-- PADDING -->
    <Thickness x:Key="Padding.Small">8</Thickness>
    <Thickness x:Key="Padding.Card">16</Thickness>
    <Thickness x:Key="Padding.Page">24</Thickness>

    <!-- MARGIN (Top/Bottom) -->
    <Thickness x:Key="Margin.Card">0,0,0,16</Thickness>
    <Thickness x:Key="Margin.Component">0,0,0,8</Thickness>

</ResourceDictionary>
